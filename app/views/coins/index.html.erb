<h1>Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <!-- <td><img src="<%= coin.url_image %>" style="width: 25px; height: 25px;"></td> -->
          <td><%= image_tag coin.url_image, width: 25, height:25 %><td>
          <td><%= link_to 'Exibir', coin %></td>
          <td><%= link_to 'Alterar', edit_coin_path(coin) %></td>
          <td><%= link_to 'Apagar', coin, method: :delete, data: { confirm: "Você tem certeza disso?"} %></td>
        </tr>
      <% end %>
  </tbody>
</table>
<%= link_to "New coin", new_coin_path %>
